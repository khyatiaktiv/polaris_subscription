<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kanban Form View-->
    <record id="kanban_reordering_form_view" model="ir.ui.view">
        <field name="name">kanban.reordering.form.view</field>
        <field name="model">kanban.reordering</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="product_tmpl_id" invisible="1"/>
                            <field name="pricelist_id"
                                   context="{'kanban_pricelist':product_id}"
                                   options="{'no_create': True}"/>
                            <field name="reorder_qty"/>
                            <field name="minimun_qty"/>
                        </group>
                        <group>
                            <field name="automatic_confirm"/>
                            <field name="barcode"/>
                            <field name="target_location_id"/>
                            <field name="card"/>
                            <field name="card_count"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban Tree View-->
    <record id="kanban_reordering_tree_view" model="ir.ui.view">
        <field name="name">kanban.reordering.tree.view</field>
        <field name="model">kanban.reordering</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="pricelist_id"/>
                <field name="reorder_qty"/>
            </tree>
        </field>
    </record>

    <!-- Kanban Action-->
    <record id="action_kanban_reordering" model="ir.actions.act_window">
        <field name="name">Kanban Reordering Rule</field>
        <field name="res_model">kanban.reordering</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          <p>Click here to create a new Kanban Reordering rule.</p>
          </p>
        </field>
    </record>
</odoo>