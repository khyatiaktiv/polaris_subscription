<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="100"/>
		<field name="inherit_id" ref="base.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@name='integration']" position="inside">
				<div class="col-12 col-lg-6 o_setting_box" id="polaris_custom_module_code_setting">
					<div class="content-group">
						<div class="mt16">
							<label for="polaris_custom_module_code_api_key" class="me-4"/>
							<field name="polaris_custom_module_code_api_key"/>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>
