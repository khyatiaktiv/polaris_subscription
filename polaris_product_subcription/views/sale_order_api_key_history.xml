<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tree_view_sale_order_line_api_key" model="ir.ui.view">
        <field name="name">sale.order.line.api.key.tree.view</field>
        <field name="model">sale.order.line.api.key</field>
        <field name="arch" type="xml">
            <tree editable="top" create="1" delete="1" multi_edit="1" string="Subscription Product History">
                    <field name="order_line_id"/>
                    <field name="product_id"/>
                    <field name="api_key"/>
                    <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="form_view_sale_order_line_api_key" model="ir.ui.view">
        <field name="name">sale.order.line.api.key.tree.view</field>
        <field name="model">sale.order.line.api.key</field>
        <field name="arch" type="xml">
            <form string="Account">
                <sheet>
                    <group>
                        <field name="order_line_id"/>
                        <field name="product_id"/>
                        <field name="api_key"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sale_order_api_key_history" model="ir.actions.act_window.view">
        <field name="sequence">20</field>
        <field name="view_mode">tree,form</field>
        <field name="act_window_id" ref="sale.action_invoice_salesteams"/>
    </record>

    <menuitem id="sale_order_api_key_history"
    action="action_sale_order_api_key_history"
    sequence="20"/>

</odoo>
