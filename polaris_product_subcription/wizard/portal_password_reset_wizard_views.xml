<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- wizard action on res.partner -->
        <record id="partner_wizard_action_password_reset" model="ir.actions.server">
            <field name="name">Reset User Password</field>
            <field name="model_id" ref="portal_user_password_reset.model_portal_password_reset_wizard"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">action = model.action_open_wizard()</field>
        </record>

        <record id="partner_wizard_action" model="ir.actions.act_window">
            <field name="name">Reset User Password</field>
            <field name="res_model">portal.password.reset.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" eval="False"/>
        </record>

        <!-- wizard view -->
        <record id="partner_wizard_view" model="ir.ui.view">
            <field name="name">Reset User Password</field>
            <field name="model">portal.password.reset.wizard</field>
            <field name="arch" type="xml">
                <form string="Reset User Password">
                    <div class="mb-3">
                        Select which contacts password should be reset in the list below.
                    </div>
                    <field name="user_ids">
                        <tree string="Contacts" editable="bottom" create="false" delete="false">
                            <field name="partner_id" force_save="1"/>
                            <field name="email" readonly="1"/>
	                        <field name="user_id" invisible="1"/>
	                        <field name="password_match" invisible="1"/>
                            <field name="password_reset" attrs="{'readonly': [('user_id', '=', False)]}" password="True"/>
                            <field name="confirm_password_reset" attrs="{'readonly': [('user_id', '=', False)]}" password="True"/>
                            <button string="Reset Password"
                                    name="action_reset_password"
                                    type="object" class="btn-secondary"
                                    attrs="{'invisible': ['|', ('user_id', '=', False), ('password_match', '!=', False)]}"/>
                            <button string="User Not Exist"
                                    attrs="{'invisible': [('user_id', '!=', False)]}"
                                    disabled="True" class="btn-warning"/>
	                        <button string="Passwords don't Match"
                                    attrs="{'invisible': [('password_match', '=', False)]}"
                                    disabled="True" class="btn-danger"/>
                        </tree>
                    </field>
                    <footer>
                        <button string="Close" class="btn-primary"
                                special="save" data-hotkey="v" />
                    </footer>
                </form>
            </field>
        </record>
</odoo>
